<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.people.weever.activity.order.clearing.OrderClearingBaseActivity">
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <include layout="@layout/inc_toolbar_title"></include>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dim15"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical">
            <!-- 路线-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <include
                        layout="@layout/inc_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim1"></include>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dim5"
                    android:layout_marginRight="@dimen/dim5"
                    android:gravity="center"
                    android:text="결산"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <include
                        layout="@layout/inc_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dim1"></include>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim48">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_src"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|center"
                            android:text="西北工业大学"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dim15"
                        android:paddingRight="@dimen/dim15">

                        <include
                            layout="@layout/inc_line"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dim1"
                            android:layout_weight="1"></include>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="西安城市公园"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <!-- 金额-->
            <include layout="@layout/inc_line"></include>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim48">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:text="半日租费用(반일임대)"/>

                <TextView
                    android:id="@+id/tv_half_day_cost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="@dimen/dim36"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RMB"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim48">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:text="日租费用(하루임대)"/>

                <TextView
                    android:id="@+id/tv_day_cost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="@dimen/dim36"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RMB"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim48">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="left|center"
                    android:text="接送机费用(공항픽업요금)"/>

                <TextView
                    android:id="@+id/tv_transfer_cost"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="@dimen/dim36"
                    android:text=""/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="RMB"/>
            </LinearLayout>
            <include layout="@layout/inc_line"></include>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim48"
                android:gravity="center">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dim10"
                    android:layout_weight="2"
                    android:gravity="left|center"
                    android:text="会员编号(회원번호)"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_member"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:layout_height="@dimen/dim48"
                    android:text="C907842"
                    android:textColor="@color/red"
                    android:textSize="12sp"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dim10"
                        android:layout_weight="2"
                        android:gravity="left|center"
                        android:text="会员名称(회원명칭)"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tv_member_name"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:layout_height="@dimen/dim48"
                        android:text="三星"
                        android:textColor="@color/red"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dim10"
                        android:layout_weight="2"
                        android:gravity="left|center"
                        android:text="折扣前费用(할인전가격)"
                        android:textSize="12sp"/>/>

                    <TextView
                        android:id="@+id/tv_pre_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:layout_height="@dimen/dim48"
                        android:text="150RMB"
                        android:textColor="@color/red"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="left|center"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dim10"
                        android:text="折扣后费用(할인후가격)"
                        android:textSize="12sp"/>/>

                    <TextView
                        android:id="@+id/tv_post_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:layout_height="@dimen/dim48"
                        android:text="135RMB"
                        android:textColor="@color/red"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48"
                    android:gravity="center">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:gravity="left|center"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dim10"
                        android:text="折扣率(할인가격)"
                        android:textSize="12sp"/>/>

                    <TextView
                        android:id="@+id/tv_percent_discount"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right|center"
                        android:layout_height="@dimen/dim48"
                        android:text="90%"
                        android:textColor="@color/red"
                        android:textSize="12sp"/>
                </LinearLayout>
                <include layout="@layout/inc_line"></include>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="left|center"
                        android:text="起步费用(기본요금)"/>

                    <TextView
                        android:id="@+id/tv_start_up_cost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="15"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="RMB"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48">

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="公里数(키로수)"/>
                        <TextView
                            android:id="@+id/tv_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="（50公里）"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_distance_cost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="100"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="RMB"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48">

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="时长费用(소요시간)"/>
                        <TextView
                            android:id="@+id/tv_ride_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="（35Minute）"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_ride_time_cost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="35"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="RMB"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim48">

                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="3">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:text="等待时间(대기시간)"/>
                        <TextView
                            android:id="@+id/tv_wait_time"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:text="（5Minute)"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_wait_time_cost"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:visibility="gone"
                        android:text="RMB"/>
                </LinearLayout>

            </LinearLayout>


            <include layout="@layout/inc_line"></include>

            <LinearLayout
                android:layout_marginTop="@dimen/dim5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim36"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="结算方式(결산방식)"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim5"
                    android:background="@color/red">
                <Spinner
                    android:id="@+id/spn_settlement_first"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim36"
                    android:layout_weight="1"
                    android:entries="@array/settlement"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/edt_settlement_first_cost"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/shape_rec_normal_no_padding"
                    android:maxLength="6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/red"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim36"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="结算方式(결산방식)"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim5"
                    android:background="@color/red">
                <Spinner
                    android:id="@+id/spn_settlement_second"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dim36"
                    android:layout_weight="1"
                    android:entries="@array/settlement"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edt_settlement_second_cost"
                    android:layout_width="@dimen/dim48"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/shape_rec_normal_no_padding"
                    android:maxLength="6"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim48"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/dim5">
        <Button
            android:id="@+id/btn_compute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dim5"
            android:layout_height="@dimen/dim48"
            android:gravity="center"
            android:text="结算(결산)"/>

        <Button
            android:id="@+id/btn_trace"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dim5"
            android:layout_height="@dimen/dim48"
            android:gravity="center"
            android:text="路线轨迹(노선궤적)"/>
    </LinearLayout>
</LinearLayout>
