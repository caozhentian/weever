<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_update"
    android:background="@color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ic_launcher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim48"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        android:paddingTop="@dimen/dim10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10"
             />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim10" />
    </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim54"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_launcher"/>
        <TextView
            android:id="@+id/tv_version_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim5"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/t0b0b0b"
            android:textSize="14sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_package_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim5"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/t0b0b0b"
            android:textSize="12sp"
            android:text="安装包大小17.8MB"
            android:visibility="gone"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_update"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/rect_dlg_ok_cancel_backgroud"
        android:layout_marginLeft="@dimen/dim25"
        android:layout_marginRight="@dimen/dim25"
        android:layout_marginBottom="@dimen/dim75"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/update"/>
</RelativeLayout>
